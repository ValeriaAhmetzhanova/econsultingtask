{
  "manifest_version": 2,
  "name": "Task3",
  "description": "Implementation of task3 in e-consulting",
  "version": "1",
  "author": "Valeria Mustafina",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Task3 Solution"
  },
  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
      "css": ["styles.css"]
    }],
  "background" : {
    "scripts" : ["background.js"]
  },
  "permissions": ["activeTab"]
}